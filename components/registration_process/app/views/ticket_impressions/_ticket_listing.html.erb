<table class='table table-striped'>
  <thead>
    <tr>
      <th>#</th>
      <th><%= t('column_names.number') %></th>
      <th><%= Guest.model_name.human %></th>
      <th class='text-center'><%= t('column_names.table.number') %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @ticket_listing.each do |ticket_row| %>
      <tr>
        <td><%= ticket_row.row_number %></td>
        <td><%= ticket_row.number %></td>
        <td><%= ticket_row.guest_name %></td>
        <td class='text-center'><%= ticket_row.table_number %></td>
        <td>
          <%= link_to(
            t('helpers.links.ticket_impressions.show'),
            lottery_ticket_impression_path(@lottery, ticket_row, format: :pdf),
            class: 'btn btn-default btn-xs',
            target: '_blank',
            rel: 'nofollow',
          ) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
