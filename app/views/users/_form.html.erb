<%= form_for(@user, html: { class: 'form-horizontal user' }) do |f| %>
  <% if @user.errors.any? %>
    <div id='error_expl' class='panel panel-danger'>
      <div class='panel-heading'>
        <h3 class='panel-title'><%= t(
          'activerecord.errors.models.user.errors.header',
          count: @user.errors.count,
          model: User.model_name.human.downcase,
          default: :'activerecord.errors.template.header',
        ) %></h3>
      </div>
      <div class='panel-body'>
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class='form-group'>
    <%= f.label(:email, class: 'control-label col-lg-2') %>
    <div class='col-lg-10'>
      <%= f.text_field(:email, class: 'form-control') %>
      <%=f.error_span(:email) %>
    </div>
  </div>
  <div class='form-group'>
    <%= f.label(:password, class: 'control-label col-lg-2') %>
    <div class='col-lg-10'>
      <%= f.password_field(:password, class: 'form-control') %>
      <%=f.error_span(:password) %>
    </div>
  </div>

  <div class='form-group'>
    <div class='col-lg-offset-2 col-lg-10'>
      <%= f.submit(nil, class: 'btn btn-primary') %>
      <%= link_to(
        t('.cancel', default: t('helpers.links.cancel')),
        users_path,
        class: 'btn btn-default',
      ) %>
    </div>
  </div>
<% end %>
