<table class='table table-striped'>
  <thead>
    <tr>
      <th>#</th>
      <th><%= t(:'column_names.user.email') %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each.with_index do |user, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to(
            t(:'helpers.links.edit'),
            edit_user_path(user),
            class: 'btn btn-default btn-xs',
          ) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
