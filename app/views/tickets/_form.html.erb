<%= form_for(
  [@lottery, @ticket],
  html: { class: 'form-horizontal ticket' },
) do |f| %>
  <% if @ticket.errors.any? %>
    <div id='error_expl' class='panel panel-danger'>
      <div class='panel-heading'>
        <h3 class='panel-title'><%= pluralize(@ticket.errors.count, 'error') %> prohibited this ticket from being saved:</h3>
      </div>
      <div class='panel-body'>
        <ul>
        <% @ticket.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class='form-group'>
    <%= f.label(:seller_id, class: 'control-label col-lg-2') %>
    <div class='col-lg-10'>
      <%= f.text_field(:seller_id, class: 'form-control') %>
    </div>
    <%=f.error_span(:seller_id) %>
  </div>
  <div class='form-group'>
    <%= f.label(:guest_id, class: 'control-label col-lg-2') %>
    <div class='col-lg-10'>
      <%= f.text_field(:guest_id, class: 'form-control') %>
    </div>
    <%=f.error_span(:guest_id) %>
  </div>
  <div class='form-group'>
    <%= f.label(:sponsor_id, class: 'control-label col-lg-2') %>
    <div class='col-lg-10'>
      <%= f.text_field(:sponsor_id, class: 'form-control') %>
    </div>
    <%=f.error_span(:sponsor_id) %>
  </div>
  <div class='form-group'>
    <%= f.label(:number, class: 'control-label col-lg-2') %>
    <div class='col-lg-10'>
      <%= f.text_field(:number, class: 'form-control') %>
    </div>
    <%=f.error_span(:number) %>
  </div>

  <div class='form-group'>
    <div class='col-lg-offset-2 col-lg-10'>
      <%= f.submit(nil, class: 'btn btn-primary') %>
      <%= link_to(
        t('.cancel', default: t('helpers.links.cancel')),
        lottery_tickets_path(@lottery), class: 'btn btn-default',
      ) %>
    </div>
  </div>
<% end %>
