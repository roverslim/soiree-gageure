<%= form_for(
  [@lottery, @ticket],
  html: { class: 'form-horizontal ticket' },
) do |f| %>
  <% if @ticket.errors.any? %>
    <div id='error_expl' class='panel panel-danger'>
      <div class='panel-heading'>
        <h3 class='panel-title'><%= t(
          'activerecord.errors.models.ticket.errors.header',
          count: @ticket.errors.count,
          model: Ticket.model_name.human.downcase,
          default: :'activerecord.errors.template.header',
        ) %></h3>
      </div>
      <div class='panel-body'>
        <ul>
        <% @ticket.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class='form-group'>
    <%= f.label(:number, class: 'control-label col-lg-2') %>
    <div class='col-lg-10'>
      <%= f.text_field(:number, class: 'form-control', autofocus: true) %>
      <%= f.error_span(:number) %>
    </div>
  </div>
  <div class='form-group'>
    <%= f.label(:seller_name, class: 'control-label col-lg-2') %>
    <div class='col-lg-10'>
      <%= f.text_field(:seller_name, class: 'form-control') %>
      <%= f.error_span(:seller_name) %>
    </div>
  </div>
  <div class='form-group'>
    <%= f.label(:guest_name, class: 'control-label col-lg-2') %>
    <div class='col-lg-10'>
      <%= f.text_field(:guest_name, class: 'form-control') %>
      <%= f.error_span(:guest_name) %>
    </div>
  </div>
  <div class='form-group'>
    <%= f.label(:sponsor_name, class: 'control-label col-lg-2') %>
    <div class='col-lg-10'>
      <%= f.text_field(:sponsor_name, class: 'form-control') %>
      <%= f.error_span(:sponsor_name) %>
    </div>
  </div>
  <div class='form-group'>
    <%= f.label(:state, class: 'control-label col-lg-2') %>
    <div class='col-lg-10'>
      <%= f.select(:state, options_for_state_select, {}, class: 'form-control') %>
      <%= f.error_span(:select) %>
    </div>
  </div>
  <div class='form-group'>
    <%= f.label(:ticket_type, class: 'control-label col-lg-2') %>
    <div class='col-lg-10'>
      <%= f.select(:ticket_type, options_for_ticket_type_select, {}, class: 'form-control') %>
      <%= f.error_span(:select) %>
    </div>
  </div>

  <div class='form-group'>
    <div class='col-lg-offset-2 col-lg-10'>
      <%= f.submit(nil, class: 'btn btn-primary') %>
      <%= link_to(
        t('.cancel', default: t('helpers.links.cancel')),
        lottery_tickets_path(@lottery), class: 'btn btn-default',
      ) %>
    </div>
  </div>
<% end %>
