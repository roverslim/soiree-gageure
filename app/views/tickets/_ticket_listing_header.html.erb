<div class='page-header'>
  <div class='row-fluid'>
    <h1>
      <%= title %>
      <div class='pull-right text-right'>
        <form accept-charset='UTF-8' action='<%= path_to_listing %>' method='get'>
          <%= text_field_tag(
            :number_filter, @ticket_listing.number_filter,
            class: 'form-control span2',
            placeholder: t('number_filter_placeholder'),
            autofocus: true,
            onfocus: 'this.select();',
          ) %>
        </form>
        <% if can_build_new %>
          <%= link_to(
            t('helpers.titles.new', model: Ticket.model_name.human.downcase),
            new_lottery_ticket_path(@lottery),
            class: 'btn btn-primary',
          ) %>
          <%= link_to(
            '.xlsx'.html_safe,
            lottery_tickets_path(@lottery, format: :xlsx),
            target: :_self,
            class: 'btn btn-default'
          ) %>
        <% end %>
      </div>
    </h1>
  </div>
</div>
