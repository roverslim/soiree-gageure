<% content_for(:content_adjacent_to_sidebar) do %>
  <%= render(
    'tickets/ticket_listing_header',
    {
      title: t('ticket_registrations.index.title'),
      path_to_listing: lottery_ticket_registrations_path(@lottery),
      can_build_new: false,
    }
  ) %>

  <% if @ticket_listing.tickets_to_display? %>

    <% if @ticket_listing.warn? %>
      <%= render(
        'tickets/warning_notice',
        notice: @ticket_listing.warning_notice,
        message: @ticket_listing.warning_message,
      ) %>
    <% end %>

    <%= render 'ticket_registrations/ticket_listing' %>

  <% else %>

    <%= render(
      'tickets/empty_ticket_listing',
      message: @ticket_listing.no_tickets_message,
    ) %>

  <% end %>
<% end %>
