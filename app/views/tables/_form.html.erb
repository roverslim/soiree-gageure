<%= form_for(
  @table,
  url: lottery_tables_path(@lottery),
  html: { class: 'form-horizontal table' },
) do |f| %>
  <% if @table.errors.any? %>
    <div id='error_expl' class='panel panel-danger'>
      <div class='panel-heading'>
        <h3 class='panel-title'><%= pluralize(@table.errors.count, 'error') %> prohibited this table from being saved:</h3>
      </div>
      <div class='panel-body'>
        <ul>
        <% @table.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class='form-group'>
    <%= f.label(:lottery_id, class: 'control-label col-lg-2') %>
    <div class='col-lg-10'>
      <%= f.text_field(:lottery_id, class: 'form-control') %>
    </div>
    <%=f.error_span(:lottery_id) %>
  </div>
  <div class='form-group'>
    <%= f.label(:number, class: 'control-label col-lg-2') %>
    <div class='col-lg-10'>
      <%= f.text_field(:number, class: 'form-control') %>
    </div>
    <%=f.error_span(:number) %>
  </div>
  <div class='form-group'>
    <%= f.label(:capacity, class: 'control-label col-lg-2') %>
    <div class='col-lg-10'>
      <%= f.text_field(:capacity, class: 'form-control') %>
    </div>
    <%=f.error_span(:capacity) %>
  </div>

  <div class='form-group'>
    <div class='col-lg-offset-2 col-lg-10'>
      <%= f.submit(nil, class: 'btn btn-primary') %>
      <%= link_to(
        t('.cancel', default: t('helpers.links.cancel')),
        lottery_tables_path(@lottery),
        class: 'btn btn-default',
      ) %>
    </div>
  </div>
<% end %>
