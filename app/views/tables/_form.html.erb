<%= form_for(
  [@lottery, @table],
  html: { class: 'form-horizontal table' },
) do |f| %>
  <% if @table.errors.any? %>
    <div id='error_expl' class='panel panel-danger'>
      <div class='panel-heading'>
        <h3 class='panel-title'><%= t(
          'activerecord.errors.models.table.errors.header',
          count: @table.errors.count,
          model: Table.model_name.human.downcase,
          default: :'activerecord.errors.template.header',
        ) %></h3>
      </div>
      <div class='panel-body'>
        <ul>
        <% @table.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class='form-group'>
    <%= f.label(:number, class: 'control-label col-lg-2') %>
    <div class='col-lg-10'>
      <%= f.text_field(:number, class: 'form-control', autofocus: true) %>
      <%= f.error_span(:number) %>
    </div>
  </div>
  <div class='form-group'>
    <%= f.label(:capacity, class: 'control-label col-lg-2') %>
    <div class='col-lg-10'>
      <%= f.text_field(:capacity, class: 'form-control') %>
      <%= f.error_span(:capacity) %>
    </div>
  </div>

  <div class='form-group'>
    <div class='col-lg-offset-2 col-lg-10'>
      <%= f.submit(nil, class: 'btn btn-primary') %>
      <%= link_to(
        t('.cancel', default: t('helpers.links.cancel')),
        lottery_tables_path(@lottery),
        class: 'btn btn-default',
      ) %>
    </div>
  </div>
<% end %>
