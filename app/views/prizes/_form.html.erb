<%= form_for(
  [@lottery, @prize],
  html: { class: 'form-horizontal prize' },
) do |f| %>
  <% if @prize.errors.any? %>
    <div id='error_expl' class='panel panel-danger'>
      <div class='panel-heading'>
        <h3 class='panel-title'><%= pluralize(@prize.errors.count, 'error') %> prohibited this prize from being saved:</h3>
      </div>
      <div class='panel-body'>
        <ul>
        <% @prize.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class='form-group'>
    <%= f.label(:lottery_id, class: 'control-label col-lg-2') %>
    <div class='col-lg-10'>
      <%= f.text_field(:lottery_id, class: 'form-control') %>
    </div>
    <%=f.error_span(:lottery_id) %>
  </div>
  <div class='form-group'>
    <%= f.label(:draw_order, class: 'control-label col-lg-2') %>
    <div class='col-lg-10'>
      <%= f.text_field(:draw_order, class: 'form-control') %>
    </div>
    <%=f.error_span(:draw_order) %>
  </div>
  <div class='form-group'>
    <%= f.label(:amount, class: 'control-label col-lg-2') %>
    <div class='col-lg-10'>
      <%= f.text_field(:amount, class: 'form-control') %>
    </div>
    <%=f.error_span(:amount) %>
  </div>

  <div class='form-group'>
    <div class='col-lg-offset-2 col-lg-10'>
      <%= f.submit(nil, class: 'btn btn-primary') %>
      <%= link_to(
        t('.cancel', default: t('helpers.links.cancel')),
        lottery_prizes_path(@lottery),
        class: 'btn btn-default',
      ) %>
    </div>
  </div>
<% end %>
