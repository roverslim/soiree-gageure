<%= form_for(
  [@lottery, @prize],
  html: { class: 'form-horizontal prize' },
) do |f| %>
  <% if @prize.errors.any? %>
    <div id='error_expl' class='panel panel-danger'>
      <div class='panel-heading'>
        <h3 class='panel-title'><%= t(
          'activerecord.errors.models.prize.errors.header',
          count: @prize.errors.count,
          model: Prize.model_name.human.downcase,
          default: :'activerecord.errors.template.header',
        ) %></h3>
      </div>
      <div class='panel-body'>
        <ul>
        <% @prize.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class='form-group'>
    <%= f.label(:draw_order, t('column_names.prize.draw_order'), class: 'control-label col-lg-2') %>
    <div class='col-lg-10'>
      <%= f.text_field(:draw_order, class: 'form-control', autofocus: true) %>
      <%= f.error_span(:draw_order) %>
    </div>
  </div>
  <div class='form-group'>
    <%= f.label(:nth_before_last, t('column_names.prize.nth_before_last'), class: 'control-label col-lg-2') %>
    <div class='col-lg-10'>
      <%= f.text_field(:nth_before_last, class: 'form-control') %>
      <%= f.error_span(:nth_before_last) %>
    </div>
  </div>
  <div class='form-group'>
    <%= f.label(:amount, t('column_names.prize.amount'), class: 'control-label col-lg-2') %>
    <div class='col-lg-10'>
      <%= f.text_field(:amount, class: 'form-control') %>
      <%= f.error_span(:amount) %>
    </div>
  </div>

  <div class='form-group'>
    <div class='col-lg-offset-2 col-lg-10'>
      <%= f.submit(nil, class: 'btn btn-primary') %>
      <%= link_to(
        t('.cancel', default: t('helpers.links.cancel')),
        lottery_prizes_path(@lottery),
        class: 'btn btn-default',
      ) %>
    </div>
  </div>
<% end %>
