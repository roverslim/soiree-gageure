<%- model_class = Prize -%>
<div class='page-header'>
  <h1><%= t(
    '.title',
    default: model_class.model_name.human.pluralize.titleize,
  ) %></h1>
</div>
<table class='table table-striped'>
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:lottery_id) %></th>
      <th><%= model_class.human_attribute_name(:draw_order) %></th>
      <th><%= model_class.human_attribute_name(:amount) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%= t('.actions', default: t('helpers.actions')) %></th>
    </tr>
  </thead>
  <tbody>
    <% @prizes.each do |prize| %>
      <tr>
        <td><%= prize.id %></td>
        <td><%= prize.lottery_id %></td>
        <td><%= prize.draw_order %></td>
        <td><%= prize.amount %></td>
        <td><%= l(prize.created_at) %></td>
        <td>
          <%= link_to(
            t('.edit', default: t('helpers.links.edit')),
            edit_lottery_prize_path(@lottery, prize),
            class: 'btn btn-default btn-xs',
          ) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to(
  t('.new', default: t('helpers.links.new')),
  new_lottery_prize_path(@lottery),
  class: 'btn btn-primary',
) %>
