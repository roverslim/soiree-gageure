<%- model_class = Prize -%>
<div class='page-header'>
  <h1><%= t(
    '.title',
    default: model_class.model_name.human.pluralize(I18n.locale).titleize,
  ) %></h1>
  <div class='row'>
    <div class='pull-right'>
      <%= link_to(
        t(
          'prizes.new.title',
          default: [:'helpers.titles.new', 'New %{model}'],
          model: model_class.model_name.human.downcase,
        ),
        new_lottery_prize_path(@lottery),
        class: 'btn btn-primary',
      ) %>
    </div>
  </div>
</div>
<% if @prizes.present? %>
  <table class='table table-striped'>
    <thead>
      <tr>
        <th>#</th>
        <th><%= t('column_names.draw_order') %></th>
        <th><%= t('column_names.prize.amount') %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @prizes.each.with_index do |prize, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= prize.draw_order %></td>
          <td><%= number_to_currency(prize.amount) %></td>
          <td>
            <%= link_to(
              t('.edit', default: t('helpers.links.edit')),
              edit_lottery_prize_path(@lottery, prize),
              class: 'btn btn-default btn-xs',
            ) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class='row-fluid'><%= t('.no_prizes') %></div>
<% end %>
