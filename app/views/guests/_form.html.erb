<%= form_for(@guest, html: { class: 'form-horizontal guest' }) do |f| %>
  <% if @guest.errors.any? %>
    <div id='error_expl' class='panel panel-danger'>
      <div class='panel-heading'>
        <h3 class='panel-title'><%= pluralize(@guest.errors.count, 'error') %> prohibited this guest from being saved:</h3>
      </div>
      <div class='panel-body'>
        <ul>
        <% @guest.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class='form-group'>
    <%= f.label(:full_name, class: 'control-label col-lg-2') %>
    <div class='col-lg-10'>
      <%= f.text_field(:full_name, class: 'form-control') %>
    </div>
    <%=f.error_span(:full_name) %>
  </div>

  <div class='form-group'>
    <div class='col-lg-offset-2 col-lg-10'>
      <%= f.submit(nil, class: 'btn btn-primary') %>
      <%= link_to(
        t('.cancel', default: t('helpers.links.cancel')),
        guests_path, class: 'btn btn-default',
      ) %>
    </div>
  </div>
<% end %>
