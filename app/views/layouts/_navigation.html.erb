<%= nav_bar(
  fixed: :top,
  responsive: true,
  fluid: true,
  brand: image_tag('lions_international.gif', size: '53x50'),
) do %>
  <% if current_user %>
    <%= menu_group do %>
      <%= menu_item(Lottery.model_name.human.pluralize, lotteries_path) %>
      <%= menu_item(Seller.model_name.human.pluralize, sellers_path) %>
      <%= menu_item(Guest.model_name.human.pluralize, guests_path) %>
      <%= menu_item(Sponsor.model_name.human.pluralize, sponsors_path) %>
    <% end %>
    <%= menu_group(pull: :right) do %>
      <%= menu_item(User.model_name.human.pluralize, users_path) %>
      <%= menu_item(
        t('.logout'),
        destroy_user_session_path,
        method: :delete,
      ) %>
    <% end %>
  <% end %>
<% end %>
